<div id="results">
  <% if @results %>
    <p><%= @results['hits'].count %> results (<%= @results['processingTimeMs'] %>ms)</p>

    <div class="results-grid">
      <% @results['hits'].each do |result| %>
        <div class="result">
          <% if result['image'] %>
            <div class="image" style="background-image:url(<%= result['image'] %>);"></div>
          <% else %>
            <div class="image"></div>
          <% end %>
          
          <div class="content">
            <h4><%= result['name'] %></h4>
            <p><%= result['school'].upcase %></p>
            <%= link_to "Details", result['url'], target: "_blank" %>
          </div>
        </div>
      <% end %>

      <% if @results.empty? %>
        <p>No results.</p>
      <% end %>
    </div>
  <% end %>
</div>